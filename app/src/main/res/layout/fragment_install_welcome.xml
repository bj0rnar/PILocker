<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/installation_name_constraintLayout"
    tools:context=".InstallNamingFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/installation_welcome_cardView"
        android:layout_width="340sp"
        android:layout_height="100sp"
        app:cardCornerRadius="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.144">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="@string/welcome_header"
            android:layout_marginTop="10sp"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10sp"
            android:text="@string/welcome_header_text"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/installation_welcome_btn_first_time_installation"
        style="@style/InstallationButton"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:text="@string/welcome_button_first"
        app:layout_constraintBottom_toTopOf="@+id/installation_welcome_btn_nth_time_installation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/installation_welcome_cardView" />

    <Button
        android:id="@+id/installation_welcome_btn_nth_time_installation"
        style="@style/InstallationButton"
        android:layout_width="300sp"
        android:layout_height="60sp"
        android:text="@string/welcome_button_nth"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/installation_welcome_cardView"
        app:layout_constraintVertical_bias="0.512" />


</androidx.constraintlayout.widget.ConstraintLayout>