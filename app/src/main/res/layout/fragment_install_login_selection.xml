<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/installation_logging_constraintLayout"
    tools:context=".InstallNamingFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="340sp"
        android:layout_height="80sp"
        app:cardCornerRadius="8sp"
        app:layout_constraintBottom_toTopOf="@+id/installation_logging_chooseselection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Installation: 3 of 5"
            android:textSize="25sp" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/installation_logging_chooseselection"
        android:layout_width="340sp"
        android:layout_height="300sp"
        app:cardCornerRadius="8sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20sp"
            android:layout_marginBottom="100sp"
            android:textSize="14sp"
            android:text="@string/choose_login_selection"
            />


        <RadioGroup
            android:id="@+id/radio_logging_radioGroup"
            android:layout_width="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20sp"
            android:layout_height="wrap_content"
            android:checkedButton="@id/radio_logging_no"
            android:orientation="vertical">
            <RadioButton android:id="@+id/radio_authSelection_biometric"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biometrics" />
            <RadioButton android:id="@+id/radio_authSelection_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pin code" />
            <RadioButton android:id="@+id/radio_authSelection_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nothing" />
        </RadioGroup>

        <EditText
            android:id="@+id/installation_authSelection_editText_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20sp"
            android:layout_marginTop="70sp"
            android:ems="10"
            android:hint="@string/insert_pin_code"
            android:inputType="number" />

        <EditText
            android:id="@+id/installation_authSelection_editText_repeatPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="20sp"
            android:layout_marginTop="100sp"
            android:ems="10"
            android:hint="@string/repeat_pin_code"
            android:inputType="number" />




    </androidx.cardview.widget.CardView>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/installation_logging_nextBtn"
            style="@style/InstallationButton"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:elevation="10sp"
            android:text="@string/next" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>