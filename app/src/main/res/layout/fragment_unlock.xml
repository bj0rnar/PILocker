<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C5CAE9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UnlockFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="340sp"
            android:layout_height="300sp"
            app:cardCornerRadius="8sp"
            android:layout_gravity="center|top"
            android:layout_marginTop="100sp">

            <TextView
                android:id="@+id/unlock_status_door_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_marginTop="10sp"/>

            <TextView
                android:id="@+id/unlock_status_lastcmd_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last command sent:"
                android:layout_gravity="top|center"
                android:layout_marginTop="40sp"/>

            <TextView
                android:id="@+id/unlock_status_status_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:text="LOCKED"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/unlock_status_time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text="19:43"
                android:layout_gravity="bottom|start"
                />

            <TextView
                android:id="@+id/unlock_status_date_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8sp"
                android:text="03/03/2020"
                android:layout_gravity="bottom|end"
                />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/lockBtn"
            android:layout_width="300sp"
            android:layout_height="60sp"
            style="@style/LockingButton"
            android:layout_gravity="bottom|center"
            android:textColor="@color/colorPrimaryDark"
            android:elevation="10sp"
            android:layout_marginBottom="100sp"
            android:text="LOCK" />

        <Button
            android:id="@+id/unlockBtn"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="300sp"
            android:layout_height="60sp"
            android:layout_gravity="bottom|center"
            android:elevation="10sp"
            android:layout_marginBottom="200sp"
            style="@style/LockingButton"
            android:text="UNLOCK"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>




