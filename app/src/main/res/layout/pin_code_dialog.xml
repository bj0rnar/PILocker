<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryLightBackgroundColor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:scaleType="center"
        android:textAlignment="center"
        android:background="@color/colorPrimary"
        android:text="Insert pin code"
        android:paddingTop="20dp"
        android:textColor="@color/primaryTextColor"
        android:textSize="25sp"
        android:contentDescription="@string/app_name" />
    <EditText
        android:id="@+id/pin_code_dialog_code"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primaryTextColor"
        android:drawableRight="@drawable/ic_vpn_key_black_24dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:hint="Pin code" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pin_code_btn"
        android:text="Sign in"
        style="@style/InstallationButton"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="8dp"/>
</LinearLayout>